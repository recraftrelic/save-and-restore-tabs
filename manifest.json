{
    "manifest_version": 2,
    "name": "Save and restore tabs",
    "version": "1.0",
    "description": "Save tabs to list and restore them",
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["tabs"],
    "browser_action": {
        "default_icon": "icons/icon-32.png",
        "default_title": "Save this tab",
        "default_popup": "popup/save_tab.html"
    }
}
